{
  "manifest_version": 3,
  "name": "Manga Sync",
  "version": "1.0.0",
  "description": "Manage and sync your manga reading progress",
  "icons": {
    "48": "icons/icon-48.svg"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "48": "icons/icon-48.svg"
    },
    "default_title": "Manga Sync"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "manga-sync@example.com",
      "strict_min_version": "109.0"
    }
  }
}
